@model IEnumerable<BookingApp.Models.Korisnici>

@{
    ViewData["Title"] = "Index";
}


<div class="card shadow my-3">
    <div class="card-header">
        <div class="d-sm-flex align-items-center justify-content-between">
            <h6>Korisnici</h6>
            <a asp-action="Create" class="btn btn-primary">Kreiraj novi</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Ime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prezime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.KorisničkoIme)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BrojTelefona)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prezime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KorisničkoIme)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BrojTelefona)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.KorisnikId"> <i class="fa-solid fa-pen-to-square"></i></a> |
                            <a asp-action="Details" asp-route-id="@item.KorisnikId"> <i class="fa-solid fa-circle-info"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.KorisnikId"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
